<!doctype html>
<html lang=en>
  <head>
	<title>External evaluator for IS</title>
	<link rel="stylesheet" href="stylesheet.css" type="text/css">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<meta name="Author" content="Vladimír Štill">
	<meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
    }
    td { padding: 0.2em; }
    td.resTrue { background-color: #6f6; }
    td.resFalse { background-color: #f66; }
  </style>
  </head>

  <body>
	<h1>Logs for {{course}}</h1>
  <p>
    Logs by days:<br>
    <table>
      <tr>
        <td>Timestamp</td>
        <td>Author</td>
        <td>Question</td>
        <td>Option</td>
        <td>Mode</td>
        <td>result</td>
        <td></td>
      </tr>
    {% for r in rows %}
      <tr>
        <td>{{r.timestamp}}</td>
        <td>{{ r.author | default("(unknown)", true) }}</td>
        <td><code>{{ r.question }}</code></td>
        <td><code>{{ r.option }}</td>
        <td>{{ "syntax check (hint)" if r.hint else "authorized" }}</td>
        <td class="res{{r.result}}">{{ r.result }}</td>
        <td><a href="log_detail;id={{r.id}}">details</a></td>
      </tr>
    {% endfor %}
  </p>
  </body>
</html>
